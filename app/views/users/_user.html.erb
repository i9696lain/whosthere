<% if user.is_staying %>
  <%= form_for( user, url: leave_room_user_path(user.room_id, user.id), html: {class: 'staying' }) do |f| %>
    <%= image_submit_tag("user_sample.jpg", alt: user.name, class: "is_staying", width: "65px", height: "65px") %>
  <% end %>
<% else %>
  <%= form_for user, url: enter_room_user_path(user.room_id, user.id), html: {class: 'staying' } do |f| %>
    <%= image_submit_tag("user_sample.jpg", alt: user.name, class: "not_staying", width: "65px", height: "65px") %>
  <% end %>
<% end %>