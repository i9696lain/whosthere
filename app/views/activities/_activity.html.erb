<li>
  <%= avatar_imgtag(activity.user) %>
  <% case activity.action %>
  <% when 1 then %>
    <span><%= t('.enter_message', name: activity.user.name) %></span>
  <% when 2 then %>
    <span><%= t('.leave_message', name: activity.user.name) %></span>
  <% end %>
  <span><small><%= time_ago_in_words(activity.created_at) %><%= t('.ago') %></small></span>
</li>
